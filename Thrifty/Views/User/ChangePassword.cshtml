@model Thrifty.Models.User

@{
    ViewData["navTitel"] = $"Change Password For ({Model.fullName})";
    ViewData["navActive"] = "User";
    ViewData["Title"] = "Change User Password";
    Layout = "~/Views/Shared/_dashbord.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <div cite="row">
            <div class="col-md-4">
                <form asp-action="ChangePassword">
                    <input type="hidden" asp-for="id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="password" class="control-label"></label>
                        <input asp-for="password" type="password" class="form-control" />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="d-flex align-items-center">
                        <div>
                            <input type="submit" value="Change" class="btn btn-secondary" />
                        </div>
                        <div class="ml-3">
                            <a asp-action="Index" class="btn btn-light">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
