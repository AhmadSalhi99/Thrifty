    <link href="~/css/dashbord/light-bootstrap-dashboard.css" rel="stylesheet" />
    <link href="~/css/dashbord/bootstrap.min.css" rel="stylesheet" />
    <style>
        .sidebar .nav li.active .nav-link, body > .navbar-collapse .nav li.active .nav-link {
            color: #000;
            opacity: 1;
            background: rgba(255, 255, 255, 0.23);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .sidebar .nav li .nav-link, body > .navbar-collapse .nav li .nav-link {
            color: #424242;
            margin: 5px 15px;
            opacity: .86;
            border-radius: 4px;
            display: block;
            padding: 10px 15px;
        }

        .Top {
            width: 100%;
            height: 61px;
            background-color: #B9BFC9;
            display: flex;
            align-items: center;
        }

            .Top > p {
                color: black;
                font-size: 19px;
                padding-inline-start: 20px;
                margin: 0 !important;
            }

        .content {
            padding-inline: 3vw !important;
        }

        .btn-Add {
            color: #000;
            background-color: #b8bec8;
            padding-inline: 23px;
            padding-block: 10px;
            border-radius: 5px;
            margin-top: 23px;
            margin-bottom: 35px;
            font-size: 16px;
        }

        .btn-Action-Edit {
            padding-inline: 12px;
            padding-block: 7px;
            border: 2px solid #e8c129;
            border-radius: 10px;
            display: flex;
        }

            .btn-Action-Edit:hover {
                background-color: #e8c129;
            }


        .btn-Action-Delete {
            padding-inline: 12px;
            padding-block: 7px;
            border: 2px solid #D43333;
            border-radius: 10px;
            display: flex;
        }

            .btn-Action-Delete:hover {
                background-color: #D43333;
            }

        .btn-Action-change {
            padding-inline: 12px;
            padding-block: 7px;
            border: 2px solid #c8c8c8;
            border-radius: 10px;
            display: flex;
        }

            .btn-Action-change:hover {
                background-color: #c8c8c8;
            }


        .btn-Action-Images {
            padding-inline: 12px;
            padding-block: 7px;
            border: 2px solid #4FD5FF;
            border-radius: 10px;
            display: flex;
        }

            .btn-Action-Images:hover {
                background-color: #4FD5FF;
            }


        .btn-Action-Accept {
            padding-inline: 12px;
            padding-block: 7px;
            border: 2px solid #0DB829;
            border-radius: 10px;
            display: flex;
        }

            .btn-Action-Accept:hover {
                background-color: #0DB829;
            }

        .navbar-brand {
            padding: 0;
            margin: 0;
        }

        .btn-Action-Reject {
            padding-inline: 12px;
            padding-block: 7px;
            border: 2px solid #D43333;
            border-radius: 10px;
            display: flex;
        }

        .btn-Action-Reject:hover {
            background-color: #D43333;
        }

        .navbar .navbar-brand {
            font-size: 16px;
            color: #000;
        }

        .logo {
            display: flex;
            justify-content: center;
        }
    </style>
