@model Thrifty.Models.ItemCategory

@{
    ViewData["navTitel"] = "$Edit Item Category ({Model.name})";
    ViewData["navActive"] = "Category";
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_dashbord.cshtml";
}


@*<div class="Top">
    <p>Edit Item Category (@Model.name)</p>
</div>*@

<div class="content">
    <div class="container-fluid">


        <div cite="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="id" />
                    <div class="form-group">
                        <label asp-for="name" class="control-label"></label>
                        <input asp-for="name" class="form-control" />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                    <div class="d-flex align-items-center">
                        <div>
                            <input type="submit" value="Save" class="btn btn-secondary" />
                        </div>
                        <div class="ml-3">
                            <a asp-action="Index" class="btn btn-light">Back to List</a>
                        </div>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
