@model Thrifty.Models.ItemCategory

@{
    ViewData["navTitel"] = "Create New Item Category";
    ViewData["navActive"] = "Category";
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_dashbord.cshtml";
}


@*
